<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="UpdaterWindow" parent="GtkApplicationWindow">
    <property name="title" translatable="yes">Updater</property>
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <property name="child">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        
        <!-- Button row -->
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">12</property>
            <property name="halign">end</property>
            <child>
              <object class="GtkButton" id="clear_button">
                <property name="label">aaaa</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="refresh_button">
                <property name="label">Refresh</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="updateall_button">
                <property name="label">Update All</property>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Scrolled list -->
        <child>
          <object class="GtkScrolledWindow">
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <property name="has-frame">True</property>
            <property name="child">
              <object class="GtkListBox" id="update_list">
                <property name="selection-mode">none</property>
                <style>
                  <class name="boxed-list"/>
                </style>
              </object>
            </property>
          </object>
        </child>
        
        <!-- Status label -->
        <child>
          <object class="GtkLabel" id="label">
            <property name="label">Ready</property>
            <property name="halign">center</property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
